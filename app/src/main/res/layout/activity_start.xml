<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        tools:context=".ui.start.StartActivity">

    <ImageView
            android:id="@+id/startLogoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ping_pong_x"
            android:layout_marginTop="24dp"
            android:contentDescription="Logo da app"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/startTitleID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Começar Partida"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/startLogoID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/startInfoLabelID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preencha os campos"
            android:layout_marginTop="24dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/startTitleID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/playerOneEditID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jogador 1"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/startInfoLabelID"/>

    <EditText
            android:id="@+id/playerTwoEditID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jogador 2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/playerOneEditID"/>

    <TextView
            android:id="@+id/startFooterID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feito por Roger Philippe - FIAP 2020"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:id="@+id/startStartBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Começar"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/startFooterID"/>

</androidx.constraintlayout.widget.ConstraintLayout>